---
pagination:
    data: noticias
    size: 10
---

{% extends "layouts/default.njk" %}


{% block content %}

	<div class="container">
		<h2>Noticias</h2>
		<div class="row">
		{% for noticia in pagination.items %}
			<div class="col-md-6">
				<a href="/noticias/{{noticia.url | slug}}"><img src="{{noticia.portada.url}}?w=600&fit=clip&auto=format,compress" alt="{{noticia.portada.alt}}" class="img-responsive"></a>
				<h3><a href="/noticias/{{noticia.url | slug}}">{{noticia.titulo}}</a></h3>
				<p><span>{{noticia.fecha}}</span> {{noticia.entradillaCorta}}</p>
			</div>
		{% endfor %}
		</div>

		<div class="row mt-lg mb-lg">
			<div class="col-md-6">
				<a href="{{ pagination.href.previous }}" class="btn btn-primary {% if not pagination.href.previous %}disabled{% endif %}">Siguientes</a>
			</div>
			<div class="col-md-6 text-right">
				<a href="{{ pagination.href.next }}" class="btn btn-primary {% if not pagination.href.next %}disabled{% endif %}">Anteriores</a>
			</div>
		</div>
	</div>


{% endblock %}
